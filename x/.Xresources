URxvt.background:  #050309
URxvt.foreground:  #e1daea
!URxvt*fading: 40
!URxvt*fadeColor:   #002b36
!URxvt*cursorColor: #e1daea
!URxvt*pointerColorBackground: #586e75
!URxvt*pointerColorForeground: #93a1a1

URxvt.iso14755: false
URxvt.iso14755_52: false

!!black
URxvt.color0: #0a0510
URxvt.color8: #64e1bf

!! red
URxvt.color1:       #1a1124
URxvt.color9:       #df923a

! green
URxvt.color2:       #228b22
URxvt.color10:      #86d4f2

! yellow
URxvt.color3:       #4a3661
URxvt.color11:      #37bfe6

! blue
URxvt.color4:       #6e528e

! magenta
URxvt.color5:       #9478b4
URxvt.color13:      #d69557

! cyan
URxvt.color6:       #baa9d0
URxvt.color14:      #5fc8ec

! white
URxvt.color7:       #e6e0ee
URxvt.color15:      #98be1b
!URxvt.font: xft:Inconsolata Nerd Font Mono:size=16, xft:DejaVu Sans:size=14

!URxvt.font: xft:Inconsolata Nerd Font Mono:size=16
URxvt.depth: 32
! powerlevel10 zsh
URxvt.font: xft:MesloLGS NF:size=11
URxvt.termName: rxvt-unicode
URxvt.borderless: 0
URxvt.scrollBar: false
URxvt.saveLines: 2000
URxvt.transparent: true
URxvt.shading: 25
! URxvt*letterSpace: -1
URxvt.scrollBar_right: false
URxvtscrollstyle: plain

URxvt.perl-ext: default,url-select
URxvt.perl-ext-common: default,matcher,url-select,tabbed,resize-font,clipboard,fullscreen
URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
! Clickable URLs
URxvt.url-launcher: chromium
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg4
! Yankable URLs
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: chromium
Urxvt.url-select.underline: true
!ALT+u URL Selection mode
!k,j up, down url
!return open URL, quit selection
!o  open url in browser
!y yank URL  Quit selection
!ESC cancel URL selection mode
!
! Simple Tabs
URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 3
URxvt.tabbed.tab-fg: 1
URxvt.tabbed.tab-bg: 3
! Shift+Down  New Tab
! Shift+ Left,Right  navigate tabs
! Ctrl + left, Right Move Tabs
! Ctrl+d close tab

! Change Font Size
! :
URxvt.keysym.C-equal:    resize-font:reset
URxvt.keysym.C-question: resize-font:show
URxvt.keysym.C-Down:  resize-font:smaller
URxvt.keysym.C-Up:    resize-font:bigger
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search


